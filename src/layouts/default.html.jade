        //-   li(typeof="sioc:Page", about=doc.url, class=clazz)
        //-     a(href=doc.url, property="dc:title")= doc.title

    .container
      != content

      section#contact
        .pure-g
          .pure-u-1
            //- img(src="img/selfie.png")
            h4 Handcrafted in Oakland, California by Vikram<br>
            a.h4(href="https://dribbble.com/recordfamous")
              i.h4.fa.fa-dribbble
            a.h4(href="https://github.com/vikrambabu/")
              i.h4.fa.fa-github
            a.h4(href="https://twitter.com/recordfamous")
              i.h4.fa.fa-twitter

    // Scripts
    != scripts.toHTML()
